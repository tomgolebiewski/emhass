{
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "EMHASS run",
      "type": "debugpy",
      "request": "launch",
      "module": "emhass.web_server",
      "console": "integratedTerminal",
      "purpose": [
        "debug-in-terminal"
      ],
      "justMyCode": true,
      "env": {
        //"LEGACY_CONFIG_PATH": "/workspaces/emhass/tests/config_emhass.yaml",
        "CONFIG_PATH": "/workspaces/emhass/config.json",
        "SECRETS_PATH": "/workspaces/emhass/secrets_emhass.yaml",
        "DATA_PATH": "/workspaces/emhass/data/",
        "LOGGING_LEVEL": "DEBUG" 
      },
    },
    {
      "name": "EMHASS Production",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "program": ".venv/lib/python3.12/site-packages/gunicorn",
      "purpose": [
        "debug-in-terminal"
      ],
      "args": ["emhass.web_server:create_app()"],
      "justMyCode": true,
      "env": {
        //"LEGACY_CONFIG_PATH": "/workspaces/emhass/tests/config_emhass.yaml",
        "CONFIG_PATH": "/workspaces/emhass/config.json",
        "SECRETS_PATH": "/workspaces/emhass/secrets_emhass.yaml",
        "DATA_PATH": "/workspaces/emhass/data/",
        "LOGGING_LEVEL": "DEBUG" 
      },
    },
    {
      "name": "EMHASS with options.json",
      "type": "debugpy",
      "request": "launch",
      "module": "emhass.web_server",
      "console": "integratedTerminal",
      "purpose": [
        "debug-in-terminal"
      ],
      "justMyCode": true,
      "env": {
        "CONFIG_PATH": "/workspaces/emhass/config.json",
        "OPTIONS_PATH": "/workspaces/emhass/options.json",
        "DATA_PATH": "/workspaces/emhass/data/",
        "LOGGING_LEVEL": "DEBUG", 
        //"SUPERVISOR_TOKEN": "test" //test
      },
    }
  ]
}